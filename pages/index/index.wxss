/* 视频 文章 简介 */
.majorCon{ display: flex; padding: 20rpx 0; flex-wrap: nowrap;}
.major{white-space: nowrap;}
.major .box{ text-align: center; width: 300rpx;display: inline-block;}
.major .pic{ width: 200rpx;height: 200rpx;}
